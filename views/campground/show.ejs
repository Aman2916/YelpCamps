<%layout('/layout/boilerplate.ejs') %>
<div class="row">
  <div
    class="card offset-3 col-sm-6 mb-3 border border-dark p-3 mb-sm-0"
    style="width: 35rem"
  >
    <img src="<%= campgrounds.image %>" class="card-img-top" alt="camp" />
    <div class="card-body">
      <h1 class="card-title text-center"><%=campgrounds.title %></h1>
    </div>

    <ul class="list-group list-group-flush">
      <li class="list-group-item"><b><%=campgrounds.location %></b></li>
      <li class="list-group-item">
        <p class="card-text"><%= campgrounds.description %></p>
      </li>
    </ul>

    <div class="card-body">
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          <form
            action="/campgrounds/<%= campgrounds._id %>?_method=DELETE"
            method="POST"
          >
            <button class="btn btn-danger">DELETE Camp</button>
          </form>
        </li>
      </ul>
    </div>
    <div class="mb-3 border-bottom pt-1">
      <ul class="" style="display: flex; gap: 30px">
        <li class="list-group-item" style="display: inline-flex">
          <a href="/campgrounds/<%= campgrounds._id %>/edit" class="card-link"
            >Edit Campgrounds</a
          >
        </li>
        <li class="list-group-item" style="display: inline-flex">
          <a href="/campgrounds" class="card-link">All Campground</a>
        </li>
      </ul>
    </div>
    <div class="mb-3">
      <form action="/campgrounds">
        <div>
          <label class="label" for="rating">Rating</label>
          <input
            type="range"
            id="rating"
            min="1"
            max="5"
            name="review[rating]"
          />
        </div>
        <div class="mt-3">
          <label class="label" for="revBody">Type in your Feedback</label>
          <input class="form-control"" type="textarea" id="revBody"
          name="review[body]" row=3 col=40/>
        </div>
      </form>
    </div>
  </div>
</div>
